<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    큰 네모는 동영상 , 작은 네모는 사진으로 구현할 것-->
    <LinearLayout
        android:id="@+id/image_list1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="match_parent">

        </ImageView>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_list2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="135.7dp"
            android:layout_height="match_parent"
            android:src="@drawable/example1">

        </ImageView>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="135.7dp"
            android:layout_height="match_parent"
            android:src="@drawable/example2">
        </ImageView>

        <ImageView
            android:id="@+id/image5"
            android:layout_width="135.7dp"
            android:layout_height="match_parent"
            android:src="@drawable/example3">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_list3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image6"
            android:layout_width="135.7dp"
            android:layout_height="match_parent"
            android:src="@drawable/example5">

        </ImageView>

        <ImageView
            android:id="@+id/image7"
            android:layout_width="135.7dp"
            android:layout_height="match_parent"
            android:src="@drawable/example4">
        </ImageView>

        <ImageView
            android:id="@+id/image8"
            android:layout_width="135.7dp"
            android:layout_height="match_parent"
            android:src="@drawable/example6">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_list4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image9"
            android:layout_width="200dp"
            android:layout_height="match_parent">

        </ImageView>

        <ImageView
            android:id="@+id/image10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </LinearLayout>

</LinearLayout>